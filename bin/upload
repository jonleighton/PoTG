#!/bin/bash

set -euo pipefail

cd "$(dirname "$0")/.."

OUTPUT="pi/"
PI_HOST="${1:-192.168.10.1}"

bin/lights-ant

rm -rf "$OUTPUT"
mkdir -p "$OUTPUT"

mkdir -p "$OUTPUT/lights/output"
cp "lights/output/Headless.jar" "$OUTPUT/lights/output"
cp "lights/test.lxp" "$OUTPUT/lights"

cp -r "bin/" "$OUTPUT"
cp -r "sensors/" "$OUTPUT"
cp -r "config/" "$OUTPUT"
cp -r "sounds/" "$OUTPUT"

rsync -r --delete "$OUTPUT"/* "pi@$PI_HOST:~"
