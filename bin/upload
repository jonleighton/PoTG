#!/bin/bash

cd "$(dirname "$0")/.."

OUTPUT="output/pi/"
PI_HOST="192.168.10.1"

ant
rm -rf "$OUTPUT"
mkdir -p "$OUTPUT"

cp output/Headless.jar "$OUTPUT"
cp PoTG.lxp "$OUTPUT"

cat << EOF > "$OUTPUT/run.sh"
#!/bin/bash
ROOT="\$(dirname "\$0")"
java -jar "\$ROOT/Headless.jar" "\$ROOT/PoTG.lxp"
EOF

chmod +x "$OUTPUT/run.sh"

scp "$OUTPUT"/* "pi@$PI_HOST:potg-lights/"
