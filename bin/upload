#!/bin/bash

cd "$(dirname "$0")/.."

OUTPUT="pi/"
PI_HOST="${1:-192.168.10.1}"

bin/lights-ant

rm -rf "$OUTPUT"
mkdir -p "$OUTPUT"

mkdir -p "$OUTPUT/lights/output"

cp "lights/output/Headless.jar" "$OUTPUT/lights/output"
cp "lights/test.lxp" lights/*.wav "$OUTPUT/lights"
cp -r "bin/" "$OUTPUT"
cp -r "sensors/" "$OUTPUT"

rsync -r --delete "$OUTPUT"/* "pi@$PI_HOST:potg/"
